%article
  %h1
    %a{:href => url_for(@article)} #{@article[:title]}
  .metadata
    Posted by
    %span.author= @article[:author_name] || @site.config[:author_name]
    at
    %span.posted_at= @article[:created_at]
    %a.comment-count{:href => url_for(@article) + '#disqus_thread'} Comments

  = @article[:excerpt] || @article.compiled_content(:snapshot => :pre)
